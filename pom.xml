<?xml version="1.0" encoding="UTF-8"?>
<!--
  - kOS tutorials
  - @version 2023-04-07
 -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- ====== Parent =============================================================== -->

    <parent>
        <groupId>com.tccc.kos</groupId>
        <artifactId>bom</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath/>
    </parent>

    <!-- ====== Basics =============================================================== -->

    <artifactId>tutorials</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>kos-tutorials</name>

    <!-- ====== Properties =========================================================== -->

    <properties>
        <kos.version>1.0.0-SNAPSHOT</kos.version>
    </properties>

    <!-- region Dependencies ========================================================= -->
    <dependencies>
        <dependency>
            <groupId>com.tccc.kos.sdk</groupId>
            <artifactId>api-core</artifactId>
            <version>${kos.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
    </dependencies>
    <!-- endregion -->

    <build>
        <plugins>
            <!-- Zip up the build contents -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptors>
                                <descriptor>assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- Put the Zip file into a KAB -->
            <plugin>
                <!-- $ mvn kos:kabtool -->
                <!-- $ mvn com.tccc.kos.maven:kos-maven-plugin:1.0.0-SNAPSHOT:kabtool -->
                <groupId>com.tccc.kos.maven</groupId>
                <artifactId>kos-maven-plugin</artifactId>
                <version>${kos.version}</version>
                <configuration>
                    <name>MyApp</name>
                    <type>kos.app</type>
                    <version>${project.version}</version>
                    <keySetFileName>${project.basedir}/../kos_core/files/dev.keyset</keySetFileName>
                    <zipFileName>${project.build.directory}/${project.artifactId}-${project.version}-myapp.zip</zipFileName>
                    <kabFileName>${project.build.directory}/${project.artifactId}-${project.version}.kab</kabFileName>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>kabtool</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <!-- region Repositories ========================================================= -->
    <!-- (last updated 2023-02-27 by RS) -->
    <repositories>
        <repository>
            <id>fos.releases</id>
            <name>FOS Release Repository</name>
            <url>${tccc.repo.url}/fos-releases</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>
        <repository>
            <id>fos.snapshots</id>
            <name>FOS Snapshot Repository</name>
            <url>${tccc.repo.url}/fos-snapshots</url>
            <layout>default</layout>
            <releases>
                <enabled>false</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>
    </repositories>
    <!-- endregion -->

</project>
