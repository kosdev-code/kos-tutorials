<?xml version="1.0" encoding="UTF-8"?>
<!--
  - kOS tutorials
  - @version 2023-04-07
 -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- ====== Basics =============================================================== -->

    <groupId>com.tccc.kos.tutorials</groupId>
    <artifactId>kos-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>kos-tutorials-parent</name>

    <!-- ====== Parent =============================================================== -->

    <parent>
        <groupId>com.tccc.kos</groupId>
        <artifactId>bom</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath/>
    </parent>

    <!-- ====== Properties =========================================================== -->

    <properties>
        <kos.version>1.0.0-SNAPSHOT</kos.version>
    </properties>

    <!-- ====== Modules ============================================================== -->

    <modules>
        <module>getting-started</module>
    </modules>

    <!-- region Dependencies ========================================================= -->
    <dependencies>
        <dependency>
            <groupId>com.tccc.kos.sdk</groupId>
            <artifactId>api-core</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
    </dependencies>
    <!-- endregion -->

    <!-- region Repositories ========================================================= -->
    <!-- (last updated 2023-04-12 by RS) -->
    <repositories>
        <repository>
            <id>fos.releases</id>
            <name>FOS Release Repository</name>
            <url>${tccc.repo.url}/fos-releases</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>
        <repository>
            <id>fos.snapshots</id>
            <name>FOS Snapshot Repository</name>
            <url>${tccc.repo.url}/fos-snapshots</url>
            <layout>default</layout>
            <releases>
                <enabled>false</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>
        <repository>
            <id>dcache</id>
            <name>dcache repository for nfs</name>
            <url>https://download.dcache.org/nexus/repository/releases</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>
    </repositories>
    <!-- endregion -->

    <!-- region Plugin Repositories ================================================== -->
    <!-- (last updated 2023-04-12 by RS) -->
    <pluginRepositories>
        <pluginRepository>
            <id>fos.releases</id>
            <name>FOS Release Repository</name>
            <url>${tccc.repo.url}/fos-releases</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </pluginRepository>
        <pluginRepository>
            <id>fos.snapshots</id>
            <name>FOS Snapshot Repository</name>
            <url>${tccc.repo.url}/fos-snapshots</url>
            <layout>default</layout>
            <releases>
                <enabled>false</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
    <!-- endregion -->

</project>
