<?xml version="1.0" encoding="UTF-8"?>
<!--
  - kOS tutorials
  - @version 2023-05-03
 -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- ====== Parent =============================================================== -->

    <parent>
        <groupId>com.tccc.kos</groupId>
        <artifactId>bom</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath/>
    </parent>

    <!-- ====== Basics =============================================================== -->

    <groupId>com.tccc.kos.tutorials</groupId>
    <artifactId>kos-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>kos-tutorials-parent</name>

    <!-- ====== Properties =========================================================== -->

    <properties>
        <kos.version>1.0.0-SNAPSHOT</kos.version>
    </properties>

    <!-- ====== Modules ============================================================== -->

    <modules>
        <module>getting-started</module>
    </modules>

    <!-- ====== Dependencies ========================================================= -->

    <dependencies>
        <dependency>
            <groupId>com.tccc.kos.sdk</groupId>
            <artifactId>api-core</artifactId>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
    </dependencies>

    <!-- ====== Repositories ========================================================= -->
    <!-- (need this so that the parent POM can be located) -->

    <repositories>
        <repository>
            <id>kosdevcode.releases</id>
            <name>kOS Release Repository</name>
            <url>https://maven.pkg.github.com/kosdev-code/kos-maven</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>kosdevcode.snapshots</id>
            <name>kOS Snapshot Repository</name>
            <url>https://maven.pkg.github.com/kosdev-code/kos-maven</url>
            <layout>default</layout>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>
    </repositories>

</project>
