<!--
  - Top-level parent POM of the Coca-Cola kOS project.
  - @version 2023-02-08
 -->
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- ====== Parent =============================================================== -->

    <parent>
        <groupId>com.tccc.kos</groupId>
        <artifactId>bom</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <!-- ====== Basics =============================================================== -->

    <artifactId>tutorials</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>kos-tutorials</name>

    <!-- ====== Properties =========================================================== -->

    <properties>
        <!-- region Common: Core Properties (last updated on 2023-02-27 by RS) -->
        <company.name>TCCC</company.name>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>17</java.version>
        <maven.compiler.release>${java.version}</maven.compiler.release>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <!-- endregion -->
        <!-- region Common: Maven Plugin Versions (last updated on 2023-03-31 by RS) -->
        <!-- https://maven.apache.org/plugins/index.html -->
        <!-- https://maven.apache.org/plugins/maven-antrun-plugin/ -->
        <maven-antrun-plugin.version>3.1.0</maven-antrun-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-assembly-plugin/ -->
        <maven-assembly-plugin.version>3.5.0</maven-assembly-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-clean-plugin/ -->
        <maven-clean-plugin.version>3.2.0</maven-clean-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-compiler-plugin/ -->
        <maven-compiler-plugin.version>3.11.0</maven-compiler-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-dependency-plugin/ -->
        <maven-dependency-plugin.version>3.5.0</maven-dependency-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-deploy-plugin/ -->
        <maven-deploy-plugin.version>3.1.1</maven-deploy-plugin.version>
        <!-- https://maven.apache.org/enforcer/maven-enforcer-plugin/ -->
        <maven-enforcer-plugin.version>3.2.1</maven-enforcer-plugin.version>
        <!-- https://www.mojohaus.org/exec-maven-plugin/ -->
        <exec-maven-plugin.version>3.1.0</exec-maven-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-install-plugin/ -->
        <maven-install-plugin.version>3.1.1</maven-install-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-jar-plugin/ -->
        <maven-jar-plugin.version>3.3.0</maven-jar-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-javadoc-plugin/ -->
        <maven-javadoc-plugin.version>3.5.0</maven-javadoc-plugin.version>
        <!-- https://anthonywhitford.com/lombok.maven/lombok-maven-plugin/ -->
        <lombok-maven-plugin.version>1.18.20.0</lombok-maven-plugin.version>
        <!-- https://maven.apache.org/plugin-tools/maven-plugin-plugin/ -->
        <maven-plugin-plugin.version>3.8.1</maven-plugin-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-project-info-reports-plugin/ -->
        <maven-project-info-reports-plugin.version>3.4.2</maven-project-info-reports-plugin.version>
        <!-- https://maven.apache.org/maven-release/maven-release-plugin/ -->
        <maven-release-plugin.version>3.0.0</maven-release-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-resources-plugin/ -->
        <maven-resources-plugin.version>3.3.1</maven-resources-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-shade-plugin/ -->
        <maven-shade-plugin.version>3.4.1</maven-shade-plugin.version>
        <!-- https://maven.apache.org/plugins/maven-site-plugin/ -->
        <maven-site-plugin.version>4.0.0-M6</maven-site-plugin.version>
        <!-- https://maven.apache.org/surefire/maven-surefire-plugin/ -->
        <maven-surefire-plugin.version>3.0.0</maven-surefire-plugin.version>
        <!-- endregion -->
    </properties>

    <!-- ====== Dependency Management ================================================ -->

    <dependencyManagement>
        <dependencies>
        </dependencies>
    </dependencyManagement>

    <!-- ====== Build Management ===================================================== -->

    <build>
        <pluginManagement>
            <plugins>
                <!-- region Common: Plugins (last updated on 2023-02-27 by RS) -->
                <!-- Antrun -->
                <!-- https://maven.apache.org/plugins/maven-antrun-plugin/ -->
                <!-- https://ant.apache.org/manual/Tasks/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>${maven-antrun-plugin.version}</version>
                </plugin>

                <!-- Assembly -->
                <!-- https://maven.apache.org/plugins/maven-assembly-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>${maven-assembly-plugin.version}</version>
                </plugin>

                <!-- Clean -->
                <!-- https://maven.apache.org/plugins/maven-clean-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-clean-plugin</artifactId>
                    <version>${maven-clean-plugin.version}</version>
                    <configuration>
                        <filesets>
                            <fileset>
                                <directory>build</directory>
                            </fileset>
                        </filesets>
                    </configuration>
                </plugin>

                <!-- Compiler -->
                <!-- https://maven.apache.org/plugins/maven-compiler-plugin/index.html -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${maven-compiler-plugin.version}</version>
                    <configuration>
                        <source>${maven.compiler.source}</source>
                        <target>${maven.compiler.target}</target>
                        <annotationProcessorPaths>
                            <path>
                                <groupId>org.projectlombok</groupId>
                                <artifactId>lombok</artifactId>
                                <version>${lombok.version}</version>
                            </path>
                        </annotationProcessorPaths>
                    </configuration>
                </plugin>

                <!-- Dependency -->
                <!-- https://maven.apache.org/plugins/maven-dependency-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>${maven-dependency-plugin.version}</version>
                </plugin>

                <!-- Deploy -->
                <!-- https://maven.apache.org/plugins/maven-deploy-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <version>${maven-deploy-plugin.version}</version>
                </plugin>

                <!-- Enforcer -->
                <!-- https://maven.apache.org/enforcer/maven-enforcer-plugin/ -->
                <!-- $ mvn enforcer:display-info -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-enforcer-plugin</artifactId>
                    <version>${maven-enforcer-plugin.version}</version>
                    <executions>
                        <execution>
                            <id>enforce-versions</id>
                            <goals>
                                <goal>enforce</goal>
                            </goals>
                            <configuration>
                                <rules>
                                    <requireMavenVersion>
                                        <version>3.6</version>
                                    </requireMavenVersion>
                                    <requireJavaVersion>
                                        <version>17</version>
                                    </requireJavaVersion>
                                </rules>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>

                <!-- Exec -->
                <!-- https://www.mojohaus.org/exec-maven-plugin/ -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>${exec-maven-plugin.version}</version>
                </plugin>

                <!-- Install -->
                <!-- https://maven.apache.org/plugins/maven-install-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-install-plugin</artifactId>
                    <version>${maven-install-plugin.version}</version>
                </plugin>

                <!-- Jar -->
                <!-- https://maven.apache.org/plugins/maven-jar-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-jar-plugin</artifactId>
                    <version>${maven-jar-plugin.version}</version>
                    <configuration>
                        <archive>
                            <manifestEntries>
                                <Company-Name>${company.name}</Company-Name>
                            </manifestEntries>
                        </archive>
                    </configuration>
                </plugin>

                <!-- Javadoc -->
                <!-- https://maven.apache.org/plugins/maven-javadoc-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>${maven-javadoc-plugin.version}</version>
                </plugin>

                <!-- Lombok -->
                <!-- https://anthonywhitford.com/lombok.maven/lombok-maven-plugin/ -->
                <!-- https://github.com/awhitford/lombok.maven -->
                <plugin>
                    <groupId>org.projectlombok</groupId>
                    <artifactId>lombok-maven-plugin</artifactId>
                    <version>${lombok-maven-plugin.version}</version>
                </plugin>

                <!-- Plugin -->
                <!-- https://maven.apache.org/plugin-tools/maven-plugin-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-plugin-plugin</artifactId>
                    <version>${maven-plugin-plugin.version}</version>
                </plugin>

                <!-- Project-Info-Reports -->
                <!-- https://maven.apache.org/plugins/maven-project-info-reports-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-project-info-reports-plugin</artifactId>
                    <version>${maven-project-info-reports-plugin.version}</version>
                </plugin>

                <!-- Release -->
                <!-- https://maven.apache.org/maven-release/maven-release-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>${maven-release-plugin.version}</version>
                </plugin>

                <!-- Resources -->
                <!-- https://maven.apache.org/plugins/maven-resources-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>${maven-resources-plugin.version}</version>
                </plugin>

                <!-- Site -->
                <!-- https://maven.apache.org/plugins/maven-site-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-site-plugin</artifactId>
                    <version>${maven-site-plugin.version}</version>
                </plugin>

                <!-- SureFire -->
                <!-- https://maven.apache.org/surefire/maven-surefire-plugin/ -->
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>${maven-surefire-plugin.version}</version>
                    <configuration>
                        <includes>
                            <include>UT_*.java</include>
                        </includes>
                    </configuration>
                </plugin>
                <!-- endregion -->

                <!-- Spring Boot -->
                <!-- https://www.baeldung.com/executable-jar-with-maven -->
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>${spring-boot-maven-plugin.version}</version>
                    <configuration>
                        <excludes>
                            <exclude>
                                <groupId>org.projectlombok</groupId>
                                <artifactId>lombok</artifactId>
                            </exclude>
                        </excludes>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <!-- ====== Dependency Repositories ============================================== -->

    <repositories>
        <!-- region Common: Repositories (last updated on 2023-02-27 by RS) -->
        <repository>
            <id>fos.releases</id>
            <name>FOS Release Repository</name>
            <url>${tccc.repo.url}/fos-releases</url>
            <layout>default</layout>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>
        <repository>
            <id>fos.snapshots</id>
            <name>FOS Snapshot Repository</name>
            <url>${tccc.repo.url}/fos-snapshots</url>
            <layout>default</layout>
            <releases>
                <enabled>false</enabled>
                <updatePolicy>daily</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
                <updatePolicy>always</updatePolicy>
                <checksumPolicy>fail</checksumPolicy>
            </snapshots>
        </repository>
        <!-- endregion -->
    </repositories>

    <!-- ====== Distribution Repositories ============================================ -->

    <distributionManagement>
        <!-- region Common: DistributionManagment (last updated on 2023-02-27 by RS) -->
        <repository>
            <uniqueVersion>false</uniqueVersion>
            <id>fos.releases</id>
            <name>FOS Release Repository</name>
            <url>${tccc.repo.url}/fos-releases</url>
            <layout>default</layout>
        </repository>
        <snapshotRepository>
            <uniqueVersion>false</uniqueVersion>
            <id>fos.snapshots</id>
            <name>FOS Snapshot Repository</name>
            <url>${tccc.repo.url}/fos-snapshots</url>
            <layout>default</layout>
        </snapshotRepository>
        <!-- endregion -->
    </distributionManagement>

    <!-- ====== Profiles ============================================================= -->

    <profiles>
        <!-- region Common: Profiles (last updated on 2023-02-27 by RS) -->
        <profile>
            <id>default-tccc-repo</id>
            <activation>
                <property>
                    <name>!env.tccc.repo.url</name>
                </property>
            </activation>
            <properties>
                <tccc.repo.url>https://nexus.ccfs-cm.com/repository</tccc.repo.url>
            </properties>
        </profile>
        <profile>
            <id>overriden-tccc-repo</id>
            <activation>
                <property>
                    <name>env.tccc.repo.url</name>
                </property>
            </activation>
            <properties>
                <tccc.repo.url>${env.tccc.repo.url}</tccc.repo.url>
            </properties>
        </profile>
        <!-- endregion -->
    </profiles>

</project>
