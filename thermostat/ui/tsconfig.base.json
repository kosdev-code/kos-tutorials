{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@thermostat/model-components": ["libs/model-components/src/index.ts"],
      "@thermostat/thermostat-models": ["libs/thermostat-models/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
